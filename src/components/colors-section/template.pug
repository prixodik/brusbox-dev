include ../palette-block/template

mixin colorsSection(data)
	.colors-section&attributes(attributes)
		._row
			._left
				._palettes
					+paletteBlock()._palette
					+paletteBlockSmall()._palette
			._right
				._right-img-1.js-pallette-chenge
					+webp("images/color-sol-2.png")
					+webp("images/color-sol-1.png").is-active
				._right-img-2.js-pallette-profile-chenge
					+webp("images/color-sol-second-img-1.png")
					+webp("images/color-sol-second-img-2.png").is-active

mixin colorsSectionLamination(data)
	.colors-section.-lamination&attributes(attributes)
		._container.container.container--text
			._buttons.js-button-palette-type
				button.js-btn-type-1._button-left.btn.btn--black.btn--border Стандарт
				button.js-btn-type-2(disabled)._button-right.btn.btn--black.btn--border.is-active AERO
			._colors
				._palettes
					+paletteBlock6Colors()._palette
				._img.js-pallette-chenge#js-palette-result-1
					+webp("images/lamination-img-2.png").is-active
					+webp("images/lamination-img-3.png")
				._img.js-pallette-chenge.is-active#js-palette-result-2
					+webp("images/lamination-img-2.png")
					+webp("images/lamination-img-1.png").is-active
