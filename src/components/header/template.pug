include ../icon-inline/template
include ../menu-block/template
include ../search-block/template
include ../soc-list/template
include ../burger/template

mixin header(data)
	header.header&attributes(attributes)
		._body
			#js-submenu._submenu
				._submenu-container.container
					._submenu-row
						._submenu-items
							a(href="#")._submenu-title Пластиковые окна
							a(href="#")._submenu-item BRUSBOX SUPER AERO
							a(href="#")._submenu-item BRUSBOX GLIDE
							a(href="#")._submenu-item BRUSBOX AERO
							a(href="#")._submenu-item BRUSBOX ACLASS
							a(href="#")._submenu-item BRUSBOX 70-6
							a(href="#")._submenu-item BRUSBOX 60-4
							span
							a(href="#")._submenu-item Раздвижные системы GLIDE
							a(href="#")._submenu-item Нестандартные пластиковые окна
							a(href="#")._submenu-item Цветные пластиковые окна
							a(href="#")._submenu-item Фигурные пластиковые окна
							
						._submenu-items
							a(href="#")._submenu-title Пластиковые двери
							a(href="#")._submenu-item Входные двери
							a(href="#")._submenu-item Балконные двери
							a(href="#")._submenu-item Межкомнатные двери
						
						._submenu-items
							a(href="#")._submenu-title Подоконники
							a(href="#")._submenu-item Подоконник BRUSBOX
							a(href="#")._submenu-item Подоконник BRUSBOX AERO
							a(href="#")._submenu-item Соединители подоконника
							a(href="#")._submenu-item Заглушки на подоконник
						
						._submenu-items
							a(href="#")._submenu-title Балконы и лоджии
							a(href="#")._submenu-item Холодное остекление
							a(href="#")._submenu-item Теплое остекление
							a(href="#")._submenu-item Панорамное остекление
							a(href="#")._submenu-item Французское остекление
							a(href="#")._submenu-item Остекление лоджий
							a(href="#")._submenu-item Остекление балконов
							a(href="#")._submenu-item Остекление веранд
						
						._submenu-items
							a(href="#")._submenu-title Преимущества
							a(href="#")._submenu-title Калькулятор

			._container.container
				._wrapper
					._top
						a._logo(href="/")
							img(src='/images/logo.svg' alt='brusbox')

						._items
							+menuBlockNav()._nav

							._contacts
								+iconInlineLocation({
									icon: 'marker',
									text: 'Нижний Новгород'
								})._contacts-item.header__contacts-item--location.icon-inline--location

								//- +iconInline({
								//- 	icon: 'user',
								//- 	text: 'Личный кабинет'
								//- })._contacts-item.icon-inline--login

								+iconInline({
									icon: 'phone',
									text: '8 (800) 777-55-33'
								})._contacts-item.icon-inline--phone

								+socListHeader()._soc

								a(href="#")._login Личный кабинет

								+searchBlockHeader({
									placeholder: "поиск по сайту"
								})._search

							+burger()._burger

					._bottom
						._menu
							+menuBlock()
						+iconInlineLocation({
							icon: 'marker',
							text: 'Нижний Новгород'
						})._contacts-item.header__contacts-item--location.header__contacts-item--sm
						
						+searchBlockHeader({
							placeholder: "поиск по сайту"
						})._search--sm

