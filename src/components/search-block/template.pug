
mixin searchBlock(data)
	form.search-block.js-search-block&attributes(attributes)
		button(type="submit")._icon.js-search-toggle.is-disabled
			+svg('search')
		._wrapper
			input._input(type="text" placeholder=data.placeholder)
			//-button._btn Искать

mixin searchBlockHeader(data)
	form.search-block.--header.js-search-block&attributes(attributes)
		button(type="submit")._icon.js-search-toggle.is-disabled
			+svg('search')
		._wrapper
			input._input.js-search-input(type="text" placeholder=data.placeholder)