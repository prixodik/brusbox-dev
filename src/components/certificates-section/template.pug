mixin certificatesSectionProfile(data)
	.certificates-section&attributes(attributes)
		._container.container.container--sm
			._title
				.title-h5
					!=data.title
			._row.row
				+documentBlock({
					text: "Сертификат соответствия <br> № 04ИДЮ1.RU.C00001 <br> Срок действия: до 16.07.2023",
					img: "images/certificates-icon-1.png"
