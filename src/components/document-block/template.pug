mixin documentBlock(data)
	.document-block.--red-text.--svg-fancybox&attributes(attributes)
		a(href=data.link)._img.js-fancybox
			+svg("certificates")
			a(href=data.link)._text.js-fancybox
				!=data.text

mixin documentBlockMode(data)
	.document-block.--mode&attributes(attributes)
			a(href=data.link)._img.js-fancybox
				+webp(data.img)
			if data.text
				._text
					!=data.text

mixin documentBlockMarket(data)
	.document-block.--btn.--market&attributes(attributes)
		+webp(data.img)._img
		if data.text
			._text
				!=data.text
		._link
			a(href="#")
				+svg("download")

mixin documentBlockBtn(data)
	.document-block.--btn.--mode&attributes(attributes)
		+webp(data.img)
		if data.btn
			._button
				a(href="#").btn.-border.-red 
					!=data.btn
		if data.text
			._text
				!=data.text
				._link
					a(href="#")
						+svg("download")

mixin documentBlockDownload(data)
	.document-block.--red-text.--svg-fancybox&attributes(attributes)
		a(href="Файл" download)._img
			+svg("certificates-2")
			a(href="#" download)._text
				!=data.text