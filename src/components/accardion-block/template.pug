mixin accardionBlockIn(data)
	.accardion-block.-in&attributes(attributes)
		each item in data
			._head.is-active.js-accardion-toggle
				._head-acardion
					._title
						!= item.title
					._carts
						!= item.carts
				._arrow
					+svg('arrow-right-2')
			._body.is-active.js-accardion-body
				._ditails 
					._item
						._icon 
							+svg('catalog')
						._info
							._item-title Товары из каталога:
							._item-status <strong>Товары в наличии</strong>
					._item
						._icon 
							+svg('delivery')
						._info
							._item-title Доставка:
							._item-status <strong>в течении 2-7 дней</strong>
