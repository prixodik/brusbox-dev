include ../breadcrumbs/template

mixin mainSection(data)
	.main-section&attributes(attributes)
		._head
			img(src=data.img, alt="")._img
			+breadcrumbs({
				items: data.bread
			})._bread
			h1._title
				!=data.title

		block

mixin mainSectionUser(data)
	.main-section&attributes(attributes)
		._container.container
			+breadcrumbsUser({
				items: data.bread
			})._bread 

			block