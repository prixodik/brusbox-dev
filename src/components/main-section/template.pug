include ../breadcrumbs/template

mixin mainSection(data)
	.main-section&attributes(attributes)
		._head
			img(src=data.img, alt="")._head-img
			+breadcrumbs({
				items: data.bread
			})._bread
			h1._title
				!=data.title

		block

mixin mainSectionMode(data)
	.main-section.--mode&attributes(attributes)
		._head
			img(src=data.img, alt="")._head-img
			+breadcrumbs({
				items: data.bread
			})._bread
			._head-info
				._date
					!=data.date
				h1._title
					!=data.title
				._subtitle 
					!=data.subtitle

		block