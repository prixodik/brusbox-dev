
include ../form-block/template

mixin selectWindowSection(data)
	.select-window-section&attributes(attributes)
		._container.container
			._row.row
				._left.col-5.col-sm-12
					img(src="images/window.png", alt="")._img
				._right.js-quiz-step-1.col-7.col-sm-12
					+formBlockWindow1()._form
					+formBlockWindow2()._form
					+formBlockWindow3()._form
					+formBlockWindow4()._form