mixin infoSectionSliderImg(data)
	.info-section.-slider-img&attributes(attributes)
		._slider.js-slider-info
			each item in data.items
				._slide
					._container.container.container--full
						._row.row
							._info.col-6.col-xs-12
								if item.title
									h2._title
										!=item.title
								._text
									!=item.text
								if item.date
									._date
										!=item.date
								if item.btn
									._button
										a(href="#").btn.-border.-red
											!=item.btn										
							._img.col-6.col-xs-12
								<span class="info-section__prev slick-arrow slick-prev" tabindex="-1">
									<svg width="48" height="49" viewBox="0 0 48 49" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#clip0_2894_13921)"><rect width="48" height="49" rx="24" fill="white" fill-opacity="0.2"/><path d="M4.90909 8.90909L30 24.5L4.90909 40.0909L-20.1818 24.5L4.90909 8.90909Z" fill="#E40032"/></g><defs><clipPath id="clip0_2894_13921"><rect width="48" height="49" rx="24" fill="white"/></clipPath></defs></svg>
								</span>
								+webp(item.img)
								<span class="info-section__next slick-arrow slick-next" tabindex="-1">
									<svg width="48" height="49" viewBox="0 0 48 49" fill="none" xmlns="http://www.w3.org/2000/svg"><g clip-path="url(#clip0_2894_13921)"><rect width="48" height="49" rx="24" fill="white" fill-opacity="0.2"/><path d="M4.90909 8.90909L30 24.5L4.90909 40.0909L-20.1818 24.5L4.90909 8.90909Z" fill="#E40032"/></g><defs><clipPath id="clip0_2894_13921"><rect width="48" height="49" rx="24" fill="white"/></clipPath></defs></svg>
								</span>
			
	
mixin infoSectionSlider(data)
	.info-section.-btn.-slider.-swiper&attributes(attributes)
		._container.container
			._row.row
				._info.col-6.col-sm-12
					if data.title
						h2._title
							!=data.title
					if data.text
						._text
							!=data.text
					if data.btn
						._button
							a(href="#").btn.-border.-red 
								!=data.btn
				._slides.col-6.col-sm-12
					._slider.swiper.mySwiper
						._slider-wrap.swiper-wrapper
							._slide.swiper-slide
								+webp("images/swiper-product-1.png")
							._slide.swiper-slide
								+webp("images/swiper-product-2.png")
							._slide.swiper-slide
								+webp("images/swiper-product-2.png")
							._slide.swiper-slide
								+webp("images/swiper-product-1.png")
						.swiper-button-prev
							+svg('slider-arrow-right')
						.swiper-button-next
							+svg('slider-arrow-right')
							
