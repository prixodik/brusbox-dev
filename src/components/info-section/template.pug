include ../form-block/template

mixin infoSection(data)
	.info-section&attributes(attributes)
		._container.container
			._row.row
				._info.col-6.col-sm-12
					if data.title
						h4._title
							!=data.title
					if data.text
						._text
							!=data.text
				if data.img
					._img.col-6.col-sm-12
						img(src=data.img, alt="")

mixin infoSectionForm(data)
	.info-section.--form&attributes(attributes)
		._container.container
			._row.row
				._info.col-6.col-sm-12
					+formBlockContactsOrderSubtitle({
						title: 'Закажите лучшие окна в BRUSBOX!',
						subtitle: 'Оставьте заявку и наш специалист свяжется с вами для расчета',
						agree: 'Нажимая кнопку «Отправить», я подтверждаю свою дееспособность, согласие на обработку персональных данных<br> в соответствии с указанным здесь текстом'
					})
				if data.img
					._img.col-6.col-sm-12
						img(src=data.img, alt="")
						
mixin infoSectionImgParams(data)
	.info-section&attributes(attributes)
		._container.container.container--full
			._row.row
				._img.col-6.col-sm-12
					img(src=data.img alt='')
				._info.col-6.col-sm-12
					._title.title-h5
						!= data.title
					+paramBlock({
						list: data.list
					})._params

mixin infoSectionParams(data)
	.info-section.info-section--col-center.info-section--transparent&attributes(attributes)
		._container.container 
			._row.row.row--center
				._col.col-6.col-xs-12
					._title.title-h5
						!= data.title
					+paramBlock({
						list: data.list
					})._params

mixin infoSectionButton(data)
	.info-section.-btn&attributes(attributes)
		._container.container
			._row.row
				._info.col-6.col-sm-12
					if data.title
						h4._title
							!=data.title
					if data.text
						._text
							!=data.text
					if data.btn
						._button
							a(href="#").btn.-border.-white 
								!=data.btn
				if data.img
					._img.col-6.col-sm-12
						img(src=data.img, alt="")

