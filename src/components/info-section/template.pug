mixin infoSection(data)
	.info-section.--title-h2&attributes(attributes)
		._container.container
			._row.row
				._info.col-6.col-sm-12
					if data.title
						h2._title
							!=data.title
					if data.text
						._text
							!=data.text
				if data.img
					._img.col-6.col-sm-12
						+webp(data.img)
						//-img(src=data.img, alt="")

