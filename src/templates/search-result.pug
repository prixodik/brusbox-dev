block content
	include ../components/head-section/template
	include ../components/search-block/template
	include ../components/pagination/template

	.search-result-page
		+headSection({
			bread: [{url: '#', title: 'Покупателям'},{url: '#', title: 'Результаты поиска'}],
			title: "Результаты поиска",
			img: "images/head-bg-result-search.jpg"
		})._head
